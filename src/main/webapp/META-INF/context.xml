<?xml version="1.0" encoding="UTF-8"?>
<Context path="/">
    <Resource name="jdbc/time_tracking"
              auth="Container"
              username="root"
              password="root"
              type="javax.sql.DataSource"
              maxTotal="100"
              maxIdle="30"
              maxWaitMillis="10000"
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/time_tracking?useSSL=false&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC"/>
</Context>